// HEADER
header.header

  .container
    .row
      .col-md-3.col-xs-12.col-sm-3
        // LOGO
        a(href="#").header__logo
          span
            img(src="../../img/logo.jpg" alt='logo')
            img(src="../../img/header-line.jpg").header__line
      .col-md-9.col-xs-12.col-sm-12
        a(href='#').header__mobile
          span.header__hamburger
          span.header__hamburger
          span.header__hamburger
          
        // NAVIGATION
        nav.nav.header__nav
          .header__additional
            form
              select.header__select
                option RU
                option EN
              .header__rate $28.4
          ul.nav__list.nav__list_header
            li.nav__item.nav__item_inline.nav__item_has-child.header__item
              span.nav__link.nav__link_dark.nav__link_uppercase.header__link.header__link_has-child наши коллекции 
              // DROP-DOWN
              //- p.nav__arrow &#x25BC;
              ul.nav__list.nav__list-child.align-center 
                li.nav__item.header__item
                  a(href="#").nav__link.nav__link_uppercase.nav__link_dark.header__link.header__link_child Мужская
                    br
                    | Lion's heart
                  a(href="#").nav__link.nav__link_uppercase.nav__link_dark.header__link.header__link_child Женская
                    br
                    | Revived
            each text in ['о нас', 'блог', 'контакты', 'уникальные подарки', 'корзина']
              li.nav__item.nav__item_inline.header__item
                a(href="#").nav__link.nav__link_uppercase.nav__link_dark.header__link= text
